<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MainActivity"
        android:background="@drawable/dd2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME TO US!"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="80dp"
            android:layout_gravity="fill_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#75D50000"
            android:textSize="28dp"
            android:textStyle="bold"
            android:typeface="serif" />


        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#92F3F2F4"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="80dp"
            android:text="Furkanguner"

            />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginBottom="50dp"
            android:textColor="#92F3F2F4"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp"
            android:text="furkan-guner@hotmail.com" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textColor="#F8F8F8"
            android:backgroundTint="#0D8C0212"
            android:text="LOG OUT"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
